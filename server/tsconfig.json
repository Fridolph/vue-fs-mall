{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./dist",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ]
  },
  "includes": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "migrations",
    "seeders",
    "test"
  ]
}
